            <%= image_tag(movie.movie.big_poster.remote_url(expires: 1.year.from_now), class: 'poster') %>
            <img src="http://dsbu8p9bw9q44.cloudfront.net/static/play.png" alt="play" class="play">
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

