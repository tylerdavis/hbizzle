    <% @movies.each do |movie| %>
      <% unless movie.movie.image_url.nil? %>
        <div class="movie" data-toggle="tooltip" data-placement="bottom" data-html="true" title="<h2><%= movie.movie.title %></h2><p><%= movie.started.strftime("%B %d, %Y") %></p><p><%= movie.movie.summary %></p>">
